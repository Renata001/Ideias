<?xml version='1.0' encoding='utf-8'?>
<widget id="id.com.br" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ideias</name>
    <description>
       Um aplicativo que oferece um ambiente execente para todos os processos.
    </description>
    <author email="reh.emanuele@gmail.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
     <icon src="www/img/icon.png"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
</widget>
